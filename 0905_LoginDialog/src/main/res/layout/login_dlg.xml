<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/Silver"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="@string/title"
        android:textAlignment="textStart"
        android:textColor="@color/Yellow"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/m0905_t001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="@string/m0905_t001"
        android:textColor="@color/Navy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0905_t001"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="#FFEB3B"
        android:backgroundTintMode="multiply"
        android:hint="@string/m0905_t001"
        android:inputType="text"
        android:labelFor="@+id/RelativeLayout1"
        android:text="" />

    <TextView
        android:id="@+id/m0905_t002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtUserName"
        android:layout_alignParentStart="true"
        android:text="@string/m0905_t002"
        android:textColor="@color/Navy"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m0905_t002"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/edit_text"
        android:backgroundTint="#FFEB3B"
        android:hint="@string/m0905_t002"
        android:inputType="textPassword"
        android:labelFor="@id/m0905_t002"
        android:text="" />

    <Button
        android:id="@+id/m0905_btnOK"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPassword"
        android:layout_alignParentStart="true"
        android:hint="@string/login"
        android:text="@string/m0905_btnOK" />

    <Button
        android:id="@+id/m0905_btnCancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/m0905_btnOK"
        android:layout_alignTop="@+id/m0905_btnOK"
        android:layout_toEndOf="@+id/m0905_btnOK"
        android:text="@string/m0905_btnCancel" />

</RelativeLayout>